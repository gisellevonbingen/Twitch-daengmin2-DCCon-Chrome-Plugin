{
    "name": "Twitch daengmin2 DCCon Chrome Plugin",
    "version": "1.0.1",
	"background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "description": "https://www.twitch.tv/daengmin2",
    "permissions": ["tabs", "activeTab", "storage", "https://www.twitch.tv/*"],
	"content_scripts": [
	{
		"matches": ["https://www.twitch.tv/*"],
		"js": ["jquery.min.js", "inject.js"],
		"css": ["inject.css"]
	}],
	"browser_action": {
      "default_popup": "index.html",
	  "default_icon": "icon.png"
    },
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"manifest_version": 2
}